{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Go in Docker",
            "type": "go",
            "request": "launch",
            "mode": "remote",
            "remotePath": "/go/src/app",
            "port": 2345,
            "host": "127.0.0.1",
            "program": "${workspaceFolder}",
            "args": [],
            "showLog": true,
            "trace": "verbose",
            "dockerBuild": {
                "dockerfile": "${workspaceFolder}/Dockerfile",
                "context": "${workspaceFolder}",
                "tag": "my-go-app"
            },
            "dockerRun": {
                "image": "my-go-app",
                "ports": [
                    "8080:8080"
                ]
            },
            "preLaunchTask": "docker-build",
        }
    ]
}
